{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "resolveJsonModule": true,
    "types": ["vite/client", "node", "unplugin-icons/types/vue", "naive-ui/volar", "vitest/globals"],
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.vue", "src/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/App.vue"
  ]
}
